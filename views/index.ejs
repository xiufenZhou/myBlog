<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
      <!--<link rel="stylesheet" href="../node_modules/bootstrap/dist/css/bootstrap.min.css">-->
      <link rel="stylesheet" href="http://cdn.bootcss.com/twitter-bootstrap/3.0.3/css/bootstrap.min.css">
  </head>
  <body style="width: 100%;">
  <div style="width: 80%;margin: 0 auto;">
      <div style="font-size:30px;"><%= title %></div>
      <ul class="nav nav-tabs">
          <li role="presentation" class="active"><a href="/">首页</a></li>
          <li role="presentation"><a href="blog">博客</a></li>
      </ul>
      <div style="width:100%;height:500px;background-color:#e5ffdf;">
          <div style="text-align:center;padding: 20px;font-size:30px">好好学习，天天向上</div>
          <form action="" role="form" class="form-horizontal" method="post" style="width: 80%;margin: 0 auto;">
              <div class="form-group">
                  <label for="title" class="col-md-2 control-label">标题</label>
                  <div class="col-md-10">
                      <input type="text" class="form-control" id="title" value="" />
                  </div>
              </div>
              <div class="form-group">
                  <label for="type" class="col-md-2 control-label">分类</label>
                  <div class="col-md-10">
                      <input type="text" class="form-control" id="type" value="" />
                  </div>
              </div>
              <div class="form-group">
                  <label for="content" class="col-md-2 control-label">博客内容</label>
                  <div class="col-md-10">
                      <textarea id="content" class="form-control" style="height: 250px"></textarea>
                  </div>
              </div>
              <div class="btn-group" style="padding-left:50%;">
                  <button id="btn" type="button" class="btn btn-primary" onclick=fn()>提交</button>
              </div>
          </form>
      </div>
  </div>

  <!--<script src="../node_modules/jquery/dist/jquery.min.js"></script>-->
  <!--<script src="../node_modules/bootstrap/dist/js/bootstrap.min.js"></script>-->
  <script src="http://cdn.bootcss.com/jquery/1.10.2/jquery.min.js"></script>
  <script src="http://cdn.bootcss.com/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
  <script>
      function fn() {
          var title = $('#title').val();
          var content = $('#content').val();
          $.post('http://localhost:3000/add',{title:title,content:content},function (err,response) {
            console.log('>>>>>>>',err,response);

          });
      }

  </script>
  </body>
</html>
